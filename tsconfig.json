{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "importHelpers": true,
    "lib": [
      "es2015",
      "DOM"
    ],
    "declaration": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
